<div class="container">
  <div class="row">
    <div class="col-lg-8 mb-4">
      <h1>管理者用ユーザー詳細画面</h1>
      <p>ユーザー名: <%= @user.name %></p>
      <p>メールアドレス: <%= @user.email %></p>
      <p>タスク数: <%= @user.tasks.count %></p>

      <br>
      <%= link_to 'ユーザー情報編集画面', edit_admin_user_path,class:"btn btn-primary", id:"sendMessageButton" %>
      <br>
      <br>

      <% unless @user.tasks.empty? %>
        <table border="1">
          <tr>
            <th id="title">タイトル</th>
            <th id="content">タスク内容</th>
            <th id="deadline">終了期限</th>
            <th id="status">進捗</th>
            <th id="priority">優先度</th>
            <th>タスク操作</th>
          </tr>

           <% @user.tasks.each do |task| %>
            <tr>
              <td><%= task.title %></td>
              <td><%= task.content %></td>
              <td><%= task.deadline %></td>
              <td><%= task.status %></td>
              <td><%= task.priority %></td>
              <td>
                <%= link_to '詳細', task_path(task.id), class:"btn btn-primary" %>
                <%= link_to '編集', edit_task_path(task.id), class:"btn btn-primary" %>
                <%= link_to '削除', task_path(task.id), method: :delete ,data: { confirm: '本当にタスクを削除してよろしいですか？' }, class:"btn btn-primary" %>
              </td>
            </tr>
          <% end %>
        </table>
      <% else %>
      <p>タスクはありません</p>
      <% end %>

      <br>
      <%= link_to '管理者用ユーザー一覧画面', admin_users_path,class:"btn btn-primary", id:"sendMessageButton" %>

    </div>
  </div>
</div>
