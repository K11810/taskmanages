<div class="container">
  <div class="row">
    <div class="col-lg-8 mb-4">
      <%= form_with model: [:admin, @user], local: true do |f| %>

        <% if @user.errors.any? %>
          <div id="error_explanation">
            <h2><%= @user.errors.count %>件のエラーがあります。</h2>
            <ul>
            <% @user.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

        <div class="control-group form-group">
          <div class="controls">
            <%= f.label :name %>
            <%= f.text_field :name, id: :admin_user_name %>
          </div>
        </div>

        <div class="control-group form-group">
          <div class="controls">
            <%= f.label :email %>
            <%= f.email_field :email, id: :admin_user_email %>
          </div>
        </div>

        <div class="control-group form-group">
          <div class="controls">
            <%= f.label :password %>
            <%= f.password_field :password, id: :admin_user_password %>
          </div>
        </div>

        <div class="control-group form-group">
          <div class="controls">
            <%= f.label :password_confirmation %>
            <%= f.password_field :password_confirmation, id: :admin_user_password_confirm %>
          </div>
        </div>

        <div class="actions">
          <%= f.submit class:"btn btn-primary", id:"sendMessageButton"%>
        </div>
        <% end %>
    </div>
  </div>
</div>
