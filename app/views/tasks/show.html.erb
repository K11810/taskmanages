<div class="container">
  <div class="row">
    <div class="col-lg-8 mb-4">
      <h1>タスク詳細画面</h1>
      <p>タイトル: <%= @task.title %></p>
      <p>作成者: <%= link_to @task.user.name, user_path %></p>
      <p>内容: <%= @task.content %></p>
      <p>終了期限: <%= @task.deadline %></p>
      <p>進捗: <%= @task.status %></p>
      <p>優先度: <%= @task.priority %></p>
      <% @task.labels.each do |label| %>
        <p>ラベル名：<%= label.name %></p>
      <% end %>
      <br>
      <%= link_to 'タスク一覧画面', tasks_path,class:"btn btn-primary", id:"sendMessageButton" %>
    </div>
  </div>
</div>
